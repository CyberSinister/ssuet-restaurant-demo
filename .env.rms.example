# =============================================================================
# RMS Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control
# =============================================================================

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production-min-32-chars

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Docker Compose default
DATABASE_URL="postgresql://rms_user:rms_password_123@localhost:5432/rms_db?schema=public"

# Production example (Neon)
# DATABASE_URL="postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/rms_db?sslmode=require"

# Production example (Supabase)
# DATABASE_URL="postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres"

# =============================================================================
# Redis
# =============================================================================
# Docker Compose default
REDIS_URL="redis://:redis_password_123@localhost:6379"

# Individual settings (alternative to URL)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_123

# Production example (Upstash - if you switch from self-hosted)
# UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# =============================================================================
# Socket.IO
# =============================================================================
# Socket.IO server runs on the same Next.js server or separate
SOCKET_IO_PORT=3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# For production (same domain)
# NEXT_PUBLIC_SOCKET_URL=https://yourdomain.com

# =============================================================================
# Authentication
# =============================================================================
# Admin credentials (used in seeding)
ADMIN_EMAIL=admin@rms.local
ADMIN_PASSWORD=admin123

# JWT expiry
JWT_EXPIRY=7d

# =============================================================================
# Payment Gateways
# =============================================================================

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# JazzCash
JAZZCASH_MERCHANT_ID=your_merchant_id
JAZZCASH_PASSWORD=your_password
JAZZCASH_INTEGRITY_SALT=your_salt
JAZZCASH_ENVIRONMENT=sandbox
# JAZZCASH_ENVIRONMENT=production

# Easypaisa
EASYPAISA_STORE_ID=your_store_id
EASYPAISA_HASH_KEY=your_hash_key
EASYPAISA_ENVIRONMENT=sandbox
# EASYPAISA_ENVIRONMENT=production

# =============================================================================
# Twilio (SMS & WhatsApp)
# =============================================================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp (via Twilio)
TWILIO_WHATSAPP_NUMBER=+14155238886
TWILIO_WHATSAPP_ENABLED=false

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Broadway Pizza

# =============================================================================
# File Storage (S3/MinIO)
# =============================================================================
# MinIO (Docker Compose default)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio_admin
S3_SECRET_KEY=minio_password_123
S3_BUCKET=rms-uploads
S3_REGION=us-east-1

# AWS S3 (Production)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your_aws_access_key
# S3_SECRET_KEY=your_aws_secret_key
# S3_BUCKET=your-bucket-name
# S3_REGION=ap-south-1

# Cloudflare R2 (Alternative)
# S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com
# S3_ACCESS_KEY=your_r2_access_key
# S3_SECRET_KEY=your_r2_secret_key
# S3_BUCKET=rms-uploads

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_DELIVERY=true
ENABLE_TAKEAWAY=true
ENABLE_DINE_IN=true
ENABLE_RESERVATIONS=true
ENABLE_LOYALTY=false
ENABLE_MULTI_BRANCH=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=debug
# LOG_LEVEL=info (production)

# =============================================================================
# Docker Compose Overrides (used by docker-compose.yml)
# =============================================================================
POSTGRES_USER=rms_user
POSTGRES_PASSWORD=rms_password_123
POSTGRES_DB=rms_db
POSTGRES_PORT=5432

REDIS_PORT=6379

PGADMIN_EMAIL=admin@rms.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

REDIS_COMMANDER_PORT=8081

MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_password_123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

BULL_BOARD_PORT=3001
