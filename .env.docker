# =============================================================================
# RMS - Restaurant Management System
# Docker Environment Configuration
# =============================================================================
# Copy this file to .env for Docker Compose
# =============================================================================

# =============================================================================
# Application
# =============================================================================
NODE_ENV=production
APP_PORT=3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-in-production-min-32-chars
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_USER=rms_user
POSTGRES_PASSWORD=rms_password_123
POSTGRES_DB=rms_db
POSTGRES_PORT=5432

# Constructed URL (used internally by app)
DATABASE_URL=postgresql://rms_user:rms_password_123@postgres:5432/rms_db?schema=public

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=redis_password_123
REDIS_PORT=6379

# Constructed URL (used internally by app)
REDIS_URL=redis://:redis_password_123@redis:6379

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@rms.local
SMTP_FROM_NAME=RMS

# =============================================================================
# Twilio (SMS/WhatsApp)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Stripe (Payments)
# =============================================================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# MinIO (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_password_123
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minio_admin
S3_SECRET_KEY=minio_password_123
S3_BUCKET=rms-uploads

# =============================================================================
# Dev Tools (optional)
# =============================================================================
PGADMIN_EMAIL=admin@rms.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081
BULL_BOARD_PORT=3001
