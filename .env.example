# Database Configuration
# For local development, use a local SQLite file
DATABASE_URL="file:./dev.db"

# For production with Turso, use the libSQL URL format:
# DATABASE_URL="libsql://[your-database].turso.io"
# TURSO_AUTH_TOKEN="your-turso-auth-token"

# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Admin Configuration (for initial setup)
ADMIN_EMAIL="admin@bistrobay.com"
ADMIN_PASSWORD="changeme"

# SMTP Configuration (Optional - can be configured in admin panel)
# If not set, these can be configured through the admin settings UI
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM_EMAIL="noreply@bistrobay.com"
# SMTP_FROM_NAME="Bistro Bay"

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS="false"
